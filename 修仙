  <div id="popup">
    <h3>è¨­å®šçµæ™¶æ™‚é–“ï¼ˆåˆ†é˜ï¼‰</h3>
    <input type="number" id="timeInput" placeholder="è¼¸å…¥å¹¾åˆ†é˜" min="1">
    <button onclick="startCountdown()">é–‹å§‹å€’æ•¸</button>
    <div id="countdownText" style="margin-top:10px;"></div>
    <button onclick="closePopup()">é—œé–‰</button>
  </div>

  <script>
    let countdownTimer = null;
    let isCounting = false;

    function openCrystal() {
      document.getElementById("popup").style.display = "block";
      document.getElementById("timeInput").value = '';
      document.getElementById("countdownText").innerText = '';
      isCounting = false;
      clearInterval(countdownTimer);
    }

    function closePopup() {
      clearInterval(countdownTimer);
      document.getElementById("popup").style.display = "none";
      document.getElementById("countdownText").innerText = '';
      isCounting = false;
    }

    function startCountdown() {
      if (isCounting) return; // é˜²æ­¢é‡è¤‡å•Ÿå‹•

      const input = document.getElementById("timeInput").value;
      let seconds = parseInt(input) * 60;

      if (!input || isNaN(input) || input <= 0) {
        alert("è«‹è¼¸å…¥æœ‰æ•ˆåˆ†é˜æ•¸ï¼");
        return;
      }

      isCounting = true;

      countdownTimer = setInterval(() => {
        if (seconds <= 0) {
          clearInterval(countdownTimer);
          document.getElementById("countdownText").innerText = "âœ¨ çµæ™¶å®Œæˆï¼";
          isCounting = false;
          return;
        }

        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        document.getElementById("countdownText").innerText =
          `å‰©é¤˜æ™‚é–“ï¼š${mins}åˆ† ${secs}ç§’`;

        seconds--;
      }, 1000);
    }
  </script>
